<%- include('../partials/header') %>
<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No.</th>
            <th>Departure Date/Time</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs.toLocaleString() %></td>
                <td><form action="/flights/<%= f.id %>?_method=DELETE" method="POST">
                    <button type="submit">DELETE</button></form></td>
                <td>
                    <a href="/flights/<%= f.id %>">Details</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>